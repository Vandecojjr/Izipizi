@page "/venda"
@attribute [Authorize(Roles = "EasyAdmin, Admin, vendas")]
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime
<MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="false" SliderColor="Color.Dark">
    <MudTabPanel Style="color:#065A82;" Text="Nova Venda">
        @if (!carregando)
        {
            <LancarVenda></LancarVenda>
        }
    </MudTabPanel>
    <MudTabPanel Style="color:#065A82;" Text="Vendas">
         @if (!carregando)
        {
            <VendasRealizadas></VendasRealizadas>
        }
    </MudTabPanel>
    <MudTabPanel Style="color:#065A82;" Text="Em Aberto">
         @if (!carregando)
        {
            <VendasEmAberto></VendasEmAberto>
        }
    </MudTabPanel>
</MudTabs>
@code
{
    bool carregando = true;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        carregando = false;
    }
}
